# Pantheon Server Configuration
# Copy this file to .env and update the values as needed

# Coinbase API Configuration (optional - using public endpoints)
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_API_PASSPHRASE=your_passphrase_here

# Server Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
STREAMLIT_PORT=8501
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# IMPORTANT: Set PANTHEON_REDIS_PASSWORD as a system environment variable
# Do not put the actual password in this file for security reasons
REDIS_PASSWORD=${PANTHEON_REDIS_PASSWORD}
REDIS_DB=0
REDIS_DECODE_RESPONSES=true
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECTION_POOL_MAX_CONNECTIONS=10

# Redis Key Prefixes
REDIS_PREFIX_ANALYSIS=pantheon:analysis
REDIS_PREFIX_CACHE=pantheon:cache
REDIS_PREFIX_MARKET=pantheon:market
REDIS_PREFIX_SESSION=pantheon:session

# Cache TTL Settings (in seconds)
CACHE_TTL_MARKET_DATA=300
CACHE_TTL_ANALYSIS_RESULTS=1800
CACHE_TTL_PRICE_DATA=60

# Rate Limiting
COINBASE_RATE_LIMIT=10

# Analysis Configuration
DEFAULT_CANDLE_COUNT=200
DEFAULT_TIMEFRAME=5m
ENABLE_MULTI_TIMEFRAME=true
ENABLE_EMA9_ANALYSIS=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Development
DEBUG=true
TESTING=false

